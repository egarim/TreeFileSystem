<div class="cw-240">
    <h5 class="card-title">Chemical elements</h5>
    <DxTreeView Data="@ChemicalElements.Groups"
                LoadChildNodesOnDemand="true"
                AnimationType="LayoutAnimationType.Slide">
        <DataMappings>
            <DxTreeViewDataMapping Children="Groups"
                                   HasChildren="@(nameof(ChemicalElementGroup.HasChildren))"
                                   Text="Name" />
        </DataMappings>
    </DxTreeView>
</div>

<div class="cw-240">
    <h5 class="card-title">Chemical elements</h5>
    <DxTreeView Data="@items"
                AllowSelectNodes="true"
                LoadChildNodesOnDemand="true"
                SelectionChanged="@SelectionChanged"
                AnimationType="LayoutAnimationType.Slide">
        <DataMappings>
            <DxTreeViewDataMapping Children="@(nameof(FileSystemItem.FileSystemItems))"
                                   HasChildren="@(nameof(FileSystemItem.HasChildrens))"
                                   Text="Name" />
        </DataMappings>
    </DxTreeView>
</div>